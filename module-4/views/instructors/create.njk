{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">

        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/900x900) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name" placeholder="Seu nome">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked>
                        MASCULINO
                    </span>

                    <span><input type="radio" name="gender" value="F">
                        FEMININO
                    </span>

                </div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    <input type="text" name="services" placeholder="Separe por vÃ­rgula.">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}