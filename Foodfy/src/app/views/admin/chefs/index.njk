{% extends 'model.njk' %}

{% block head %}
    <title>Listagem de Chefs</title>
{% endblock head %}

{% block content %}
    <h5 style="width: 940px; margin: 50px auto 0; font-size: 24px; color: #111111;">Gerenciar chefs</h5>
    <main class="chefs" style="margin: 30px auto">
        {% for chef in chefs %}
            <div class="chef">
                <div class="chef-avatar">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                </div>
                <div class="chef-info">
                    <h5>{{chef.name}}</h5>
                    <a href="/admin/chefs/{{ chef.id }}" class="view">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </main>
{% endblock content %}