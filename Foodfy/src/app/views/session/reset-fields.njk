<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
        required
        type="email" 
        name="email" 
        placeholder="Digite seu Email" 
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>

<div class="item">
    <div>Nova Senha</div>
    <div class="input">
        <input 
        required
        type="password" 
        name="password"
        placeholder="Digite sua nova senha"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
        required
        type="password" 
        name="passwordRepeat"
        placeholder="Repita sua nova senha"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">