{% extends "layout.njk" %}

{% block head %}
    <title>Receitas</title>
{% endblock head %}
    
{% block content %}
    <main style="min-height: 80vh;">
        {% if filter %}
            <h3>Procurando por "{{filter}}"</h3>
        {% endif %}
        <div class="recipes">
        {% for recipe in recipes %}
            <div class="card">
                <a href="/recipes/{{recipe.id}}"><img src="{{recipe.image}}" alt="{{recipe.title}}"></a>
                <h5>{{recipe.title}}</h5>
                <p>por {{recipe.chef_name}}</p>
            </div>
        {% endfor %}

        </div>
    </main>

{% endblock content %}