{% extends "layout.njk" %}


{% block head %}
<title>Portf√≥lio - Mayk Brito</title>
<style>
    #classes {
        color: rgba(27, 230, 71, 0.9);
    }
</style>

{% endblock %}

{% block content %}
<div class="links" id="wrapper">
    <h1>Aulas</h1>
</div>

<section class="cards">

    {% for item in items %}
    
    <div class="card">
        <div id="{{item.id}}" class="card_image_container {{ 'featured-wrapper' if item.featured }}">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
        {% if item.featured %}
            <div class="featured">Featured</div>
        {% endif %}
        </div>
        <div class="card_content">
            <p class="description">{{item.title}}</p>
        </div>
        <div class="card_info">
            <h5 class="time">{{item.duration}}</h5>
            <h6 class="price">{{item.price}}</h6>
        </div>
    </div>

    {% endfor %}

</section>

<script src="/scripts.js"></script>
{% endblock %}