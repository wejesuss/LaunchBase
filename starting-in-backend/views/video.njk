{% extends "layout.njk" %}


{% block head %}
<title>{{ item.title }}</title>

{% endblock %}

{% block content %}
<div class="links video" id="wrapper" >
    <h1>{{ item.title }}</h1>
</div>

<section class="video">
    
    <div class="card">
        <div id="{{item.id}}" class="card_video_container">
            <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
        </div>
        <div class="card_info">
            <h5 class="time">{{item.duration}}</h5>
            <h6 class="price">{{item.price}}</h6>
        </div>
    </div>

</section>

{% endblock %}