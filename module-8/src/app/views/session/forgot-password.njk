{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
{% call cards.render('Esqueceu a senha?', 'password container form') %}
    <form method="POST" action="/users/forgot-password" onsubmit="Validate.isInvalid(event)">
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                    required
                    type="email" 
                    name="email" 
                    placeholder="Digite o seu Email" 
                    value="{{ user.email }}"
                    onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>
        
        <button class="button" type="submit">Solicitar nova senha</button>
    </form>
{% endcall %}
{% endblock content %}