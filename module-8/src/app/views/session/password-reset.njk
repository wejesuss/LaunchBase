{% extends "layout.njk" %}

{% block content %}
<section class="password container form">
    <form method="POST" action="/users/password-reset" onsubmit="Validate.isInvalid(event)">
        <div class="header">
            <h3>Nova senha</h3>
        </div>
    
        <div class="fields">
            {% include 'session/reset-fields.njk' %}
        </div>
        
        <button class="button" type="submit">Alterar a senha</button>
    </form>
</section>
{% endblock content %}