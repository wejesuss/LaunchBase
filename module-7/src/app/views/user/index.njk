{% extends "layout.njk" %}

{% block content %}
<section class="user-dashboard container form">
    <form method="POST" action="/users?_method=PUT" onsubmit="Validate.isInvalid(event)">
        <div class="header">
            <h3>Detalhes</h3>
        </div>
    
        <div class="fields">
            {% include 'user/fields.njk' %}
        </div>
        
        <input 
        type="hidden" 
        name="id"
        value="{{ user.id }}"
        >

        <button class="button edit" type="submit">Atualizar</button>
    </form>

    <form id="form_delete" action="/users?_method=DELETE" method="POST">
    <button class="button delete" type="submit">Deletar</button>
    <input type="hidden"
    name="id" 
    value="{{ user.id }}"
    >
    </form>

</section>
{% endblock content %}