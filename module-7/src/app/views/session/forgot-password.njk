{% extends "layout.njk" %}

{% block content %}
<section class="password container form">
    <form method="POST" action="/users/forgot-password" onsubmit="Validate.isInvalid(event)">
        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>
    
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                    required
                    type="email" 
                    name="email" 
                    placeholder="Digite o seu Email" 
                    value="{{ user.email }}"
                    onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>
        
        <button class="button" type="submit">Solicitar nova senha</button>
    </form>
</section>
{% endblock content %}