<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
        required
        type="email" 
        name="email" 
        placeholder="Digite seu email para recuperar sua senha" 
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>
