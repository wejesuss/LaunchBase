<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
        required
        type="email" 
        name="email" 
        placeholder="Digite o seu Email" 
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
        required
        type="password" 
        name="password"
        placeholder="Digite sua senha"
        onkeydown="Validate.clearBorderError(this)"
        {% if error %}
            class="red"
        {% endif %}
        >
    </div>
</div>